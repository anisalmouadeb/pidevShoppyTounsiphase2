                        @Html.LabelFor(model => model.numTel, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.numTel, new { htmlAttributes = new { @Value = Model.address, @disabled = "disabled", @class = "form-control" } })
                        @Html.LabelFor(model => model.point, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.point, new { htmlAttributes = new { @Value = Model.point, @disabled = "disabled", @class = "form-control" } })
                    </form>
                </div>
