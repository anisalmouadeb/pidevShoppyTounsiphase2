@model IEnumerable<pidevShoppyTounsi.Models.Delivery>

@{
    ViewBag.Title = "GetAllDeliverys";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>GetAllDeliverys</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.deliveryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.longitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.latitude)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.deliveryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fees)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.longitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.latitude)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.deliveryId }) |
            @Html.ActionLink("Details", "Details", new { id=item.deliveryId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.deliveryId })
        </td>
    </tr>
}

</table>
