@model IEnumerable<pidevShoppyTounsi.Models.DeliveryMan>

@{
    ViewBag.Title = "GetAllDeliveryMans";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>GetAllDeliveryMans</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.isAvailable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.longitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.latitude)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.isAvailable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.longitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.latitude)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.deliveryManId }) |
            @Html.ActionLink("Details", "Details", new { id=item.deliveryManId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.deliveryManId })
        </td>
    </tr>
}

</table>
