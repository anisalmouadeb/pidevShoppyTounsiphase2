@model IEnumerable<pidevShoppyTounsi.Models.Entry>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}





<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<div class="card">
    <div class="card-header"><i class="fa fa-table"></i> List of Stock</div>
    <div class="card-body">

        <div class="table-responsive">
            <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap table table-light shadow-light">
                <thead class="thead-primary">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.product)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.provider)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.quantity)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.entryDate)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.articalPrice)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.montant)

                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.product.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.provider.name)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.entryDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.articalPrice)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.montant)
                            </td>


                            <td>
                               
                                <a class="btn btn-link text-info m-1" href="@Url.Action("Details","Entry" , new { id = item.entryId })"> Details </a>
                                <a class="btn btn-link text-danger m-1" href="@Url.Action("Delete","Entry" , new { id = item.entryId })">  Delete </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
        <p>
            <a class="btn btn-success" href="@Url.Action("Create","Entry")"> <i class="fa fa-plus"></i> Add New Stock </a>
        </p>
    </div>
</div>
<script>

            $('#demoGrid').dataTable({
            });
</script>