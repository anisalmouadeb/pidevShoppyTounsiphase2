@model pidevShoppyTounsi.Models.Product
@using pidevShoppyTounsi.Controllers
@using pidevShoppyTounsi.Models
@{
    ViewBag.Title = "Products";
}


@if (LoginController.TokenConnect != "")
{ Layout = "~/Views/Shared/ConnectedClient.cshtml"; }
else
{ Layout = "~/Views/Shared/NotConnectedClient.cshtml"; }

<main class="main account">

    <div class="page-content mt-4 mb-10 pb-6">
        <div class="container">
         
            <div class="tab tab-vertical gutter-lg">
                <ul class="nav nav-tabs mb-4 col-lg-3 col-md-4" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" href="#orders">Our Products</a>
                    
                </ul>
                <div class="tab-content col-lg-9 col-md-8">
                 
                    <div class="tab-pane active" id="orders">
                        <table class="order-table">
                            <thead>
                                <tr>
                                    <th class="pl-2">Code</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Status</th>
                                    <th class="pr-2"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Product p in ViewBag.prods)
                                {
                                    <tr>
                                        <td class="order-number"><a href="#"># @p.code</a></td>
                                        <td class="order-date">@p.name</td>
                                        <td class="order-status">@p.priceV</td>
                                        <td class="order-total">
                                            @if (p.quantity > 0)
                                            {<span> Available</span> }
                                            else
                                            { <span> Not Available</span>}
                                        </td>
                                        <td class="order-action"> @Html.ActionLink("View", "../Product/Details", new { id = p.productId })</td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
               
                  
                </div>
            </div>
        </div>
    </div>
</main>

