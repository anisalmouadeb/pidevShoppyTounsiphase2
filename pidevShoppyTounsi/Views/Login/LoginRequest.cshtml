@model pidevShoppyTounsi.Models.Login.LoginRequest

@{
    ViewBag.Title = "LoginRequest";
    Layout = "~/Views/Shared/LoginLayout.cshtml";


}
<link rel="icon" href="~/favicon.ico" type="image/x-icon">
<!-- Bootstrap core CSS-->
<link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
<!-- animate CSS-->
<link href="~/assets/css/animate.css" rel="stylesheet" type="text/css" />
<!-- Icons CSS-->
<link href="~/assets/css/icons.css" rel="stylesheet" type="text/css" />
<!-- Custom Style-->
<link href="~/assets/css/app-style.css" rel="stylesheet" />




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="wrapper">
        <div class="card  mx-auto my-5" style="width:40%">
            <div class="card-body ">
                <div class="card-content p-2">
                    <div class="text-center">
                        <img src="~/assets/images/logo-icon2.png" alt="logo icon"style="width:30%">
                    </div>
                    <div class="card-title text-uppercase text-center py-3" style="font-size:20px">Sign In</div>
                    <form>
                        <div class="form-group">
                            <label for="exampleInputUsername" class="" style="font-size:15px">Username</label>
                            <div class="position-relative has-icon-right ">
                                @Html.EditorFor(model => model.username, new { htmlAttributes = new { style = "font-size:18px", @class = "col-md-12 form-control input-shadow" } })
                                @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                <div class="form-control-position">
                                    <i class="icon-user"></i>
                                </div>
                            </div>
                        </div><br /><br />
                        <div class="form-group">
                            <label for="exampleInputPassword" class="" style="font-size:15px">Password</label>
                            <div class="position-relative has-icon-right">
                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { style = "font-size:18px", @class = " col-md-12 form-control input-shadow" } })
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                <div class="form-control-position">
                                    <i class="icon-lock"></i>
                                </div>
                            </div>
                        </div>
                        <br /> <br />
                        <div class="form-group text-center">
                            <a href="/Login/ForgetPassword">Reset Password</a>
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" style="font-size:15px" class="btn btn-primary shadow-primary btn-block waves-effect waves-light" value="Sign In">
                        </div>
                    </form>
                </div>

                <br />
                <div>
                    @{
                        if (TempData["message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" role="alert" style="width:90% ;margin-left : 5%; height:60px">
                                <button type="button" class="close" data-dismiss="alert">×</button>
                                <div class="text-center">
                                    <div class="alert-message" style="margin-left : 30%">

                                        <span>@Html.Label(TempData["message"].ToString(), new { @style = "font-size:10px ;color:white;" })</span>
                                    </div>
                                </div>
                            </div>

                        }
                    }
                </div>
            </div>
            <br />
            <div class="card-footer text-center py-3">
                <p class="text-muted mb-0">Do not have an account? <a href="/Login/SignUp"> Sign Up here</a></p>
            </div>

           
        </div>
    </div>

    <script src="~/assets/js/popper.min.js"></script>
    <!--Start Back To Top Button-->
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('body').addClass('bg-dark');
        });
    </script>
}
