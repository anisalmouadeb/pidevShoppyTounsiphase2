@model pidevShoppyTounsi.Models.Order

@{
    ViewBag.Title = "GetOrderOftheMonth";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div>
    <div class="card">
        <div class="card-header">
            <i class="fa fa-eye"></i> Details of Order of the month
        </div>
        <div class="card-body">
            <div class="form-group">

                @Html.LabelFor(model => model.orderDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.orderDate, new { htmlAttributes = new { @disabled = "disabled", @class = "form-control form-control-rounded" } })

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.orderAmount, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.orderAmount, new { htmlAttributes = new { @disabled = "disabled", @class = "form-control form-control-rounded" } })

                    </div>
                </div>

                <div>

                    @Html.LabelFor(model => model.confirmedPayment, htmlAttributes: new { @class = "control-label col-md-2" })

                    @if (Model.confirmedPayment)
                    {<div class="icheck-material-success ">
                            <input type="checkbox" id="success" checked disabled />
                            <label for="success"></label>
                        </div>}
                    else
                    {<div class="icheck-material-danger">
                            <input type="checkbox" id="success" checked disabled />
                            <label for="success"></label>
                        </div>}



                </div>



                <div class="col-md-offset-2 col-md-10">

                    <button type="button" value="Back To All Orders" class="btn btn-primary" onclick="location.href='../Order'">
                        <i class="fa fa-home"></i>
                        Back To  All Orders
                    </button>
                </div>


            </div>
        </div>
    </div>
    