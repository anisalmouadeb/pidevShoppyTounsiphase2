@model IEnumerable<pidevShoppyTounsi.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";


}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<div class="card">
    <div class="card-header"><i class="fa fa-table"></i> List of Orders</div>
    <div class="card-body">


        <div class="table-responsive">
            <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap table table-light shadow-light">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.orderDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.orderAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.confirmedPayment)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.orderDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.orderAmount)
                            </td>

                            <td>
                                <div>
                                    <div>
                                        @if (item.confirmedPayment)
                                        {<div class="icheck-material-success">
                                                <input type="checkbox" id="success" checked disabled />
                                                <label for="success"></label>
                                            </div>}
                                        else
                                        {<div class="icheck-material-danger">
                                                <input type="checkbox" id="success" checked disabled />
                                                <label for="success"></label>
                                            </div>}

                                    </div>
                                </div>
                            </td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-offset-2 col-md-10">
            <button type="button" value="Order Of the month" class="btn btn-primary" onclick="location.href='GetOrderOftheMonth'">
                <i class="fa fa-check-square-o"></i>
                Order of the month
            </button>
        </div>
        </div>
    </div>
<script>

    $('#demoGrid').dataTable({
    });
</script>
