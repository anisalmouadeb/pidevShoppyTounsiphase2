@model IEnumerable<pidevShoppyTounsi.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<div class="card">
    <div class="card-header"><i class="fa fa-table"></i> List of Orders</div>
    <div class="card-body">
     
        <div class="table-responsive">
            <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap table table-light shadow-light">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.email)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.note)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.deleviryFees)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.seuilMontant)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.reductionPercentage)

                        </th>
                
                     
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.note)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.deleviryFees)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.seuilMontant)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.reductionPercentage)
                            </td>

                      
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
<script>

            $('#demoGrid').dataTable({
            });
</script>
