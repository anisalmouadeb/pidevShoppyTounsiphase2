@model pidevShoppyTounsi.Models.Product

@using pidevShoppyTounsi.Controllers
@{
    ViewBag.Title = "Details";
}


@if (LoginController.TokenConnect != "")
{ Layout = "~/Views/Shared/ConnectedClient.cshtml"; }
else
{ Layout = "~/Views/Shared/NotConnectedClient.cshtml"; }

<nav class="breadcrumb-nav">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="demo1.html"><i class="d-icon-user"></i></a></li>
            <li>Product : @Model.name</li>
        </ul>
    </div>
</nav>


<div class="page-content mt-4 mb-10 pb-6">
    <div class="container">

        <div class="tab tab-vertical gutter-lg">
            <ul class="nav nav-tabs mb-4 col-lg-3 col-md-4" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" href="#account">Product details</a>
                </li>


            </ul>
            <div class="tab-content col-lg-9 col-md-8">




                <div class="tab-pane active" id="account">

                    <div class="row">
                        <div class="col-sm-3">
                            <h5>  @Html.LabelFor(model => model.code, htmlAttributes: new { @class = "control-label col-md-2" }) :</h5>
                        </div>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.code, new { htmlAttributes = new { @Value = Model.code, @disabled = "disabled", @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <h5>  @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" }) :</h5>
                        </div>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @Value = Model.name, @disabled = "disabled", @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <h5>  @Html.LabelFor(model => model.priceV, htmlAttributes: new { @class = "control-label col-md-2" }) :</h5>
                        </div>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.priceV, new { htmlAttributes = new { @Value = Model.priceV, @disabled = "disabled", @class = "form-control" } })
                        </div>
                    </div>






                    <br /> <br />
                    @using (Html.BeginForm("Add", "Cart", FormMethod.Post))
                    {
                        @Html.Hidden("id",Model.productId)
                        <div class="input-group mr-2">

                            @Html.DropDownList("Quantity", Enumerable.Range(1, 10).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))

                        </div>
                        @Html.Hidden("userId", LoginController.ConnectedId)
                        <button type="submit" class="btn btn-primary">Add to Cart <i class="fa fa-cart-arrow-down"></i></button>
                    }
                </div>
                
                </div>
        </div>
    </div>
</div>