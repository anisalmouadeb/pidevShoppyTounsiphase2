@model IEnumerable<pidevShoppyTounsi.Models.BonCommande>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}






<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<div class="card">
    <div class="card-header"><i class="fa fa-table"></i> Pushase Order Out of date</div>
    <div class="card-body">
     
        <div class="table-responsive">
            <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap table table-light shadow-light">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.productName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.providerName)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.bonCommandeDate)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.quantity)

                        </th>
                      
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.productName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.providerName)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.bonCommandeDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.quantity)
                            </td>
                          
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
<script>

            $('#demoGrid').dataTable({
            });
</script>