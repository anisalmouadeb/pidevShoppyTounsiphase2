@model IEnumerable<pidevShoppyTounsi.Models.Shelf>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<div class="card">
    <div class="card-header"><i class="fa fa-table"></i> List of Shelfs</div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Create New Shelf", "Create")
        </p>
        <div class="table-responsive">
            <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap table table-light shadow-light">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.shelfname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dateExpiration)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.rating)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.type)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.reductionPercantage)

                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.shelfname)
                        </td>
                        <td>
                            @if (item.dateExpiration == null)
                            {<div>Unlimited</div>}
                            else
                            { @Html.DisplayFor(modelItem => item.dateExpiration)}
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.rating)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.type)
                        </td>
                        <td>
                            @if (item.reductionPercantage == 0)
                            {<div>No reduction </div>}
                            else
                            { @Html.DisplayFor(modelItem => item.reductionPercantage)}

                        </td>
                        <td>@Html.ActionLink("List of Rate", "ListOfRating", new { id = item.shelfId })</td>
                        <td>@Html.ActionLink("List of Product", "ListOfProducts", new { id = item.shelfId }) </td>
                        <td>@Html.ActionLink("List of Category", "ListOfCategory", new { id = item.shelfId }) </td>
                     
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.shelfId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.shelfId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.shelfId })
                            |

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>

    $('#demoGrid').dataTable({
    });
</script>

