@model IEnumerable<pidevShoppyTounsi.Models.Shelf>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<div class="card">
    <div class="card-header"><i class="fa fa-table"></i> List of Shelfs</div>
    <div class="card-body">

        <div class="table-responsive">
            <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap table table-light shadow-light">
                <thead class="thead-primary">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.shelfname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dateExpiration)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.rating)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.type)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.reductionPercantage)

                        </th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                     
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.shelfname)
                            </td>
                            <td>
                                @if (item.dateExpiration == null)
                                {<div>Unlimited</div>}
                                else
                                { @Html.DisplayFor(modelItem => item.dateExpiration)}
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.rating)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.type)
                            </td>
                            <td>
                                @if (item.reductionPercantage == 0)
                                {<div>No reduction </div>}
                                else
                                { @Html.DisplayFor(modelItem => item.reductionPercantage)}

                            </td>
                            <td><a class="btn btn-link text-primary m-1" href="@Url.Action("ListOfRating","Shelf" , new { id = item.shelfId })"> List of Rate </a></td>
                            <td><a class="btn btn-link text-primary m-1" href="@Url.Action("ListOfProducts","Shelf" , new { id = item.shelfId })"> List of Products </a></td>
                            <td><a class="btn btn-link text-primary m-1" href="@Url.Action("ListOfCategory","Shelf" , new { id = item.shelfId })">List of Categories </a></td>
                

                            <td>

                                <a class="btn btn-link text-dark m-1" href="@Url.Action("Edit","Shelf" , new { id = item.shelfId })"> Edit </a>
                                <a class="btn btn-link text-info m-1" href="@Url.Action("Details","Shelf" , new { id = item.shelfId })"> Details </a>
                                <a class="btn btn-link text-danger m-1" href="@Url.Action("Delete","Shelf" , new { id = item.shelfId })">  Delete </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <br />      <p>
                        <a class="btn btn-success" href="@Url.Action("Create","Shelf")"> <i class="fa fa-plus"></i> Add New Shelf </a>
        </p>
    </div>
</div>
<script>

    $('#demoGrid').dataTable({
    });
</script>

