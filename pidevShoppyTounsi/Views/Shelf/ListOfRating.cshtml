@model IEnumerable<pidevShoppyTounsi.Models.ShelfRating>

@{
    ViewBag.Title = "ListOfRating";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<div class="card">
    <div class="card-header"><i class="fa fa-table"></i> List of Ranting of shelf :@ViewBag.shelfname</div>
    <div class="card-body">

        <div class="table-responsive">
            <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap table table-light shadow-light">
                <thead class="thead-primary">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.user)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.rating)
                        </th>



                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.user.name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.rating)
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <br />
        <button type="button" value="Back To List" class="btn btn-primary" onclick="location.href='../Index'">
            <i class="fa fa-home"></i>
            Back To list of shelfs
        </button>
    </div>
</div>
<script>

    $('#demoGrid').dataTable({
    });
</script>

