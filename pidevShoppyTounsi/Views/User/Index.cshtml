@model IEnumerable<pidevShoppyTounsi.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<div class="card">
    <div class="card-header"><i class="fa fa-table"></i> List of Users</div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap table table-light shadow-light">
                <thead class="thead-primary">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.cin)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.name)

                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.email)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.age)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.numTel)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.address)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sex)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.desactivate)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.lastLoginDate)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dateCreate)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.point)

                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.verified)

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.connected)

                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if(item.name !="admin")
                        { 
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.cin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.age)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.numTel)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.address)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sex)
                            </td>

                            <td>
                                <div>
                                    <div>
                                        @if (!item.desactivate)
                                        {<div class="icheck-material-success">
                                                <input type="checkbox" id="success" checked disabled />
                                                <label for="success"></label>
                                            </div>}
                                        else
                                        {<div class="icheck-material-danger">
                                                <input type="checkbox" id="success" checked disabled />
                                                <label for="success"></label>
                                            </div>}

                                    </div>
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.lastLoginDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dateCreate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.point)
                            </td>

                            <td>
                                <div>
                                    <div>
                                        @if (item.verified)
                                        {<div class="icheck-material-success">
                                                <input type="checkbox" id="success" checked disabled />
                                                <label for="success"></label>
                                            </div>}
                                        else
                                        {<div class="icheck-material-danger">
                                                <input type="checkbox" id="success" checked disabled />
                                                <label for="success"></label>
                                            </div>}

                                    </div>
                                </div>
                            </td>
                            <td>
                                <div>
                                    <div>
                                        @if (item.connected)
                                        {<div class="icheck-material-success">
                                                <input type="checkbox" id="success" checked disabled />
                                                <label for="success"></label>
                                            </div>}
                                        else
                                        {<div class="icheck-material-danger">
                                                <input type="checkbox" id="success" checked disabled />
                                                <label for="success"></label>
                                            </div>}

                                    </div>
                                </div>
                            </td>
                            <td>
                                <a class="btn btn-link text-info m-1" href="@Url.Action("Details","User" , new { id = item.userId })"> Details </a>

                                @if (item.desactivate == true)
                                { 
                                    <a class="btn btn-link text-success m-1" href="@Url.Action("Activate","User" , new { id = item.userId })"> Acivate </a>
                                }
                                else
                                { <a class="btn btn-link text-danger m-1" href="@Url.Action("Desactivate","User" , new { id = item.userId })"> Desactivate </a>}


                            </td>
                        </tr>
                        }    }
                </tbody>

            </table>
        </div>
        </div></div>
        <script>

            $('#demoGrid').dataTable({
            });
        </script>
